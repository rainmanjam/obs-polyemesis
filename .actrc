# act configuration for local GitHub Actions testing
# Install act: brew install act
# Run tests locally: act -j api-integration-tests

# Use medium-sized Docker images for better compatibility
-P ubuntu-latest=catthehacker/ubuntu:act-24.04

# Don't pull images if they already exist locally
--pull=false

# Set environment variables
--env RESTREAMER_HOST=localhost
--env RESTREAMER_PORT=8080
--env RESTREAMER_USER=admin
--env RESTREAMER_PASS=datarhei
