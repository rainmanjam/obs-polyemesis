# OBS Polyemesis - Test Environment Configuration
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env file to version control!

# Restreamer Server Configuration
RESTREAMER_URL=http://localhost:8080
RESTREAMER_USER=admin
RESTREAMER_PASS=admin

# Twitch Streaming (Optional - for live streaming tests)
TWITCH_INGEST_URL=rtmp://live.twitch.tv/app
TWITCH_STREAM_KEY=your_twitch_stream_key_here

# YouTube Streaming (Optional - for live streaming tests)
YOUTUBE_INGEST_URL=rtmp://a.rtmp.youtube.com/live2
YOUTUBE_STREAM_KEY=your_youtube_stream_key_here

# Instagram Streaming (Vertical 9:16 format)
INSTAGRAM_INGEST_URL=rtmps://live-upload.instagram.com:443/rtmp
INSTAGRAM_STREAM_KEY=your_instagram_stream_key_here

# OBS RTMP Output (Optional - defaults to localhost)
OBS_RTMP_URL=rtmp://localhost/live/obs_output

# Platform API Verification (Optional - for advanced stream verification)
# Get Twitch Client ID/Secret from: https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here
TWITCH_CHANNEL_NAME=your_twitch_username

# Get YouTube API Key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CHANNEL_ID=your_youtube_channel_id
