{
  "version": "3",
  "name": "E2E Test Configuration",
  "description": "Restreamer configuration for end-to-end integration testing",
  "credentials": {
    "username": "admin",
    "password": "test-password-e2e"
  },
  "api": {
    "base_url": "http://localhost:8080",
    "version": "v3",
    "timeout": 30,
    "retry_attempts": 3
  },
  "jwt": {
    "secret": "test-jwt-secret-for-e2e-testing"
  },
  "test_data": {
    "test_file": "test_upload.txt",
    "test_file_content": "This is test file content for E2E testing",
    "test_metadata": {
      "title": "E2E Test Stream",
      "author": "OBS Polyemesis E2E Tests",
      "copyright": "Test Copyright 2025"
    },
    "test_output": {
      "address": "rtmp://test.example.com/live",
      "options": [
        "-f",
        "flv"
      ]
    }
  },
  "docker": {
    "container_name": "restreamer-e2e-test",
    "health_check_interval": 5,
    "max_wait_time": 60
  },
  "platforms": {
    "linux": {
      "obs_plugin_path": "~/.config/obs-studio/plugins/obs-polyemesis"
    },
    "macos": {
      "obs_plugin_path": "~/Library/Application Support/obs-studio/plugins/obs-polyemesis"
    },
    "windows": {
      "obs_plugin_path": "%APPDATA%/obs-studio/plugins/obs-polyemesis"
    }
  }
}
