# Multi-stage Dockerfile for testing on Linux
FROM ubuntu:24.04 AS builder

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    libcurl4-openssl-dev \
    libjansson-dev \
    qtbase5-dev \
    qtbase5-private-dev \
    libqt5svg5-dev \
    python3 \
    python3-pip \
    libobs-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Copy project files
COPY . .

# Build the plugin
RUN cmake -B build -S . \
    -DCMAKE_BUILD_TYPE=Release \
    -DENABLE_QT=ON && \
    cmake --build build --config Release

# Test stage
FROM ubuntu:24.04 AS test

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    curl \
    docker.io \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# Copy built artifacts
COPY --from=builder /workspace/build ./build
COPY tests ./tests
COPY docker-compose.e2e.yml .

# Install Python test dependencies
RUN pip3 install -r tests/requirements.txt --break-system-packages

# Run tests
CMD ["pytest", "tests/integration/", "-v", "--tb=short"]
